<h1>Post Index</h1>

<ul>
    <% @posts.each do |post| %>
        <li><h2> <%= link_to post.title, post_path(post) %> </h2></li>
        <p> Created by: <%= link_to post.user.name, user_path(post.user)%> </p>
        <p> Comments: <%= post.comments.count %> </p>
    <% end %>
</ul>

<%= link_to "Create new Post", new_post_path %>