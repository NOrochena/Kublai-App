<h1>Post Index</h1>

<ul>
    <% @posts.each do |post| %>
    <li>
        <h2> <%= link_to post.title, post_path(post) %></h2>
        <p>Topic: <%= link_to post.tag.name.capitalize, "#" %> | 
        Created by: <%= link_to post.user.name.capitalize, user_path(post.user)%> | 
        Comments: <%= post.comments.count %> </p>
    </li>
    <% end %>
</ul>

<%= link_to "Create new Post", new_post_path %>