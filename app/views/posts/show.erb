<h1><%= @post.title%></h1>
<p><%= @post.content%></p>

<h2>Comments:</h2>
<ol>
    <% @post.comments.each do |comment| %>
        <li>
            <p><%= comment.content%> by: <%= link_to comment.user.name, user_path(comment.user)%></p>
        
        </li>
        
    <% end %>
</ol>

<h2>Add Comment</h2>
<%= form_tag "/comments" do %>
    <%= label_tag :content, "Content:" %>
    <%= text_field_tag :content %>
    
    <%= label_tag :user_id, "User:"%>
    <%= collection_select :comment, :user_id, User.all, :id, :name%>

    <%= hidden_field_tag :post_id, @post.id %>

    <%= submit_tag "Create Comment"%>
<% end %>

<%= link_to "Edit", edit_post_path(@post)%>
<%= link_to "Home", posts_path %>
<%= link_to "Delete", @post, method: "delete"%>