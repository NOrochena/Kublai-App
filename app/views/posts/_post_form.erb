<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :category_id%>
    <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div class="form-group">
    <%= f.label :tag_id %>
    <%= f.collection_select :tag_id, Tag.all, :id, :name %>
  </div>  
  <div class="form-group">
    <%= f.submit%>
  </div>
<% end %>