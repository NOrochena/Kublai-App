<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :content %>
    <%= f.text_area :content %>

    <%= fields_for :post_tags do |tags| %>
        <%= tags.label :tag_id %>
        <%= tags.collection_select :tag_id, Tag.all, :id, :name %>
    <% end %>
    <%= f.submit%>
<% end %>