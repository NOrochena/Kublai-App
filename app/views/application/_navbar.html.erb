<nav class="ui stackable menu">
  <div class="ui container">
    <a href="<%= root_path %>" class="header item">
      <img class="logo" src=<%= asset_path('dog.png') %>> Kublai
    </a>
    <a href="<%= categories_path %>" class="item">
      <i class="grid layout icon"></i> Browse Categories
    </a>
    <div class="right item">
      <div class="ui action input">
        <input type="text" placeholder="Search...">
        <button class="ui button">Search</button>
      </div>
      <% if find_current_user %>
        <%= link_to user_path(find_current_user), class: "ui fluid primary button" do %>
          <i class="user circle icon"></i> <%= find_current_user.name.capitalize %>
        <% end %>
        <%= link_to "Logout", logout_path, method: "delete", class: "ui red button" %>
      <% else %>
        <%= link_to "Login", login_path, class: "login-button ui primary button" %>
        <%= link_to "Create Account", new_user_path, class: "create-account-button ui fluid red button" %> 
      <% end %>
      
    </div>
  </div>
</nav>

<%= render "login_modal" %>