<h1><%= @user.name.capitalize %>'s Profile Page</h1>

<h2><%= @user.name.capitalize %>'s Projects:</h2>
<% if @user.posts.length > 0 %>
    <ol>
    <% @user.posts.each do |post| %>
        <li><%= link_to post.title, post_path(post)%></li>
    <% end %>
    </ol>
<% else %>
    <p><%= @user.name.capitalize %> hasn't started any projects.</p>
<% end %>

<h2><%= @user.name.capitalize %>'s Collaborations:</h2>
<% if @user.collaborators.length > 0 %>
    <ol>
    <% @user.collaborators.each do |collaborator| %>
        <li><%= link_to collaborator.post.title, post_path(collaborator.post)%></li>
    <% end %>
    </ol>
<% else %>
    <p><%= @user.name.capitalize %> isn't collaborating on any projects.</p>
<% end %>

<h2><%= @user.name.capitalize %>'s Comments:</h2>
<% if @user.comments.length > 0 %>
    <ol class="user-comments">
    <% @user.comments.each do |comment| %>
        <li>
            <small><%= link_to comment.post.title, post_path(comment.post) %></small>
            <!-- <%= link_to comment.content, post_path(comment.post) %> -->
            <%= comment.content %>
        </li>
    <% end %>
    </ol>
<% else %>
    <p><%= @user.name.capitalize %> hasn't left any comments.</p>
<% end %>

<ul class="inline-list">
    <li><%= link_to "Home", users_path %></li>
<% if @user.id == session["user_id"] %>
    <li><%= link_to "Delete", @user, method: "delete"%></li>
    <li><%= link_to "Edit", edit_user_path(@user)%></li>
<% end %>
</ul>
